<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cambuzz.progressworks.co.user.SettingsActivity">

    <TextView
        android:id="@+id/general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="connect to social media"
        android:layout_below="@+id/general"
        android:layout_margin="10dp"
        android:textSize="15dp"/>
    <Button
        android:id="@+id/fb_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to Facebook"
        android:textColor="#ffff"
        android:layout_below="@+id/text"
        android:layout_margin="10dp"
        android:layout_alignRight="@+id/text"
        android:layout_alignEnd="@+id/text" />
    <Button
        android:id="@+id/google_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect with Google+"
        android:textColor="#ffff"
        android:layout_margin="10dp"
        android:layout_below="@+id/fb_connect"
        android:layout_alignRight="@+id/text"
        android:layout_alignEnd="@+id/text" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:id="@+id/horizontal_line"
        android:layout_below="@+id/google_connect"
        android:layout_alignLeft="@+id/google_connect"
        android:layout_alignStart="@+id/google_connect" />
    <TextView
        android:id="@+id/other_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other settings"
        android:textColor="#000"
        android:layout_below="@+id/horizontal_line"
        android:layout_margin="10dp"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Enable push notifications"
        android:layout_below="@+id/other_settings"
        android:textColor="#000"
        android:layout_margin="25dp"
        android:padding="16dp"
        android:id="@+id/push_notification" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_push_notification"
        android:checked="false"
        android:layout_alignBottom="@+id/push_notification"
        android:layout_toRightOf="@+id/push_notification"
        android:layout_toEndOf="@+id/push_notification" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Notification sound"
        android:textColor="#000"
        android:id="@+id/sound_notification"
        android:padding="16dp"
        android:layout_below="@+id/push_notification"
        android:layout_alignLeft="@+id/push_notification"
        android:layout_alignStart="@+id/push_notification" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_sound_notification"
        android:checked="false"
        android:layout_alignBottom="@+id/sound_notification"
        android:layout_alignLeft="@+id/switch_push_notification"
        android:layout_alignStart="@+id/switch_push_notification" />

</RelativeLayout>
